<% provide(:title, 'Contact') %>

<div class="container">

  <div class="page-header">
    <h3>Do you have a project for me?</h3>
  </div>

  <div class="row">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#projectproposal" data-toggle="tab">Project Proposal</a></li>
      <li><a href="#sayhi" data-toggle="tab">Say Hi</a></li>
    </ul>

<!-- Tab panes -->
    <div class="tab-content">

<!-- PROJECT PROPOSAL -->
      <div class="tab-pane active" id="projectproposal">
        <div class="container"><br><br>
          <form role="form">

            <div class="form">
              <div class="form-group">
                <label for="ProposalInputProject">Project Type</label>
                <p class="help-block">Main purpose of project</p>
                <select class="form-control">
                  <option> --- </option>
                  <option>Web Design</option>
                  <option>Other</option>
                </select>
              </div>
            </div>

            <div class="form-inline">
              <div class="form-group">
                <label for="ProposalInputName">Name</label>
                <input type="text" class="form-control" placeholder="Name">
              </div>
              <div class="form-group">
                <label for="ProposalInputEmail">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
              </div>

              <br>

              <div class="form-group">
                <label for="ProposalInputLocation">Your Location</label>
                <input type="text" class="form-control" placeholder="Location">
              </div>
              <div class="form-group">
                <label for="ProposalInputWebsite">Your website</label>
                <input type="url" class="form-control" id="ProposalInputWebsite" placeholder="Website">
              </div>

              <br>

              <div class="form-group">
                <label for="ProposalInputDomain">Do you have a domain name?</label>
                <p></p>
                <label class="radio-inline">
                  <input type="radio" id="optionsdomainyes" value="yes" name="domainyes">
                  Yes
                </label>
                <label class="radio-inline">
                  <input type="radio" id="optionsdomainno" value="no" name="domainno">
                  No
                </label>
                <label class="radio-inline">
                  <input type="radio" id="optionsdomainna" value="na" name="domainna">
                  Not sure
                </label>
              </div>
              <div class="form-group">
                <label for="ProposalInputHosting">Do you have hosting?</label>
                <p></p>
                <label class="radio-inline">
                  <input type="radio" id="hostingoptionyes" value="yes" name="hostingyes">
                  Yes
                </label>
                <label class="radio-inline">
                  <input type="radio" id="hostingoptionno" value="no" name="hostingno">
                  No
                </label>
                <label class="radio-inline">
                  <input type="radio" id="hostingoptionna" value="na" name="hostingna">
                  Not sure
                </label>              
              </div>

              <br>

              <div class="form-group">
                <label for="ProposalInputContent">Do you have existing content?</label>
                <p></p>
                <label class="radio-inline">
                  <input type="radio" id="contentoptionyes" value="yes" name="contentyes">
                  Yes
                </label>
                <label class="radio-inline">
                  <input type="radio" id="contentoptionno" value="no" name="contentno">
                  No
                </label>
                <label class="radio-inline">
                  <input type="radio" id="contentoptionsome" value="some" name="contentsome">
                  Some
                </label>
              </div>
              <div class="form-group">
                <label for="ProposalInputPages">How many pages needed?</label>
                <select class="form-control">
                  <option> --- </option>
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                </select>
              </div>


            </div><!-- /INLINE-FORM -->
            
            <div class="form-group">
              <label for="ProposalInputMessage">Message</label>
              <p class="help-block">Please briefly explain what kind of website you are after and what you want it to do</p>
              <textarea class="form-control" rows="3"></textarea>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Send Email</button><br><br>
              </div>
            </div>

            <div class="form-inline">
              <div class="form-group">
                <label for="ProposalInputBudget">Budget estimate</label>
                <select class="form-control">
                  <option> --- </option>
                  <option>$100 - $500</option>
                  <option>$500 - $1000</option>
                  <option>$1500 - $2000</option>
                  <option>$2000+</option>
                  <option>NA</option>
                </select>
              </div>
              <div class="form-group">
                <label for="ProposalInputTimeframe">Timeframe</label>
                <select class="form-control">
                  <option> --- </option>
                  <option>ASAP</option>
                  <option>1 - 2 months</option>
                  <option>3 - 4 months</option>
                  <option>Take your time</option>
                </select>
              </div>
            </div>
          </form>
          <br><br><br>
        </div>
      </div>

<!-- SAY HI -->
      <div class="tab-pane" id="sayhi">
        <div class="container"><br><br>
          <form role="form">
            <div class="form-inline">

              <div class="form-group">
                <label for="HiInputName">Name</label>
                <input type="text" class="form-control" placeholder="Name">
              </div>

              <div class="form-group">
                <label for="HiInputEmail1">Email address</label>
                <input type="email" class="form-control" id="HiInputEmail1" placeholder="Enter email">
              </div>
            </div>
            <br><br>
            <div class="form">
              <div class="form-group">
                <label for="HiInputText">Message</label>
                <textarea class="form-control" rows="3"></textarea>
              </div>

              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <button type="submit" class="btn btn-default">Send Email</button><br><br>
                </div>
              </div>
            </div>
          </form>
          <br><br><br>
        </div>
      </div><!-- /SAY HI -->

    </div>
  </div>
</div>